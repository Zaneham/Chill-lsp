{
  "comments": {
    "lineComment": "--",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["BEGIN", "END"],
    ["DO", "OD"],
    ["IF", "FI"],
    ["CASE", "ESAC"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" },
    { "open": "/*", "close": "*/" }
  ],
  "surroundingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(BEGIN|DO|IF|CASE|MODULE|PROC|PROCESS|REGION)\\b",
      "end": "^\\s*(END|OD|FI|ESAC)\\b"
    }
  },
  "wordPattern": "[A-Za-z_][A-Za-z0-9_]*",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(BEGIN|DO|IF|CASE|MODULE|PROC|PROCESS|REGION|THEN|ELSE|ELSIF)\\b",
    "decreaseIndentPattern": "^\\s*(END|OD|FI|ESAC|ELSE|ELSIF)\\b"
  }
}
